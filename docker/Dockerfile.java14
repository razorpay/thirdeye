FROM openjdk:14-alpine

LABEL MAINTAINER=observability@razorpay.com

ENV TE_GITHUB_SRC_DIR=.

ENV TE_HOME=/opt/thirdeye

ENV FE_CONFIG_DIR=${TE_HOME}/thirdeye-frontend/config/default

RUN mkdir -p ${TE_HOME}/bin && mkdir -p ${TE_HOME}/config/default/data-sources && mkdir -p ${TE_HOME}/config/default/detector-config/anomaly-functions && mkdir -p ${TE_HOME}/config/default/data && mkdir -p ${FE_CONFIG_DIR}

COPY ${TE_GITHUB_SRC_DIR}/thirdeye-dashboard/target/thirdeye-dashboard-1.0.0-SNAPSHOT.jar ${TE_HOME}/bin/
COPY ${TE_GITHUB_SRC_DIR}/thirdeye-pinot/jmx_prometheus_javaagent-0.13.0.jar ${TE_HOME}/bin/jmx_prometheus_javaagent-0.13.0.jar
COPY ${TE_GITHUB_SRC_DIR}/docker/entrypoint.sh ${TE_HOME}/bin/entrypoint.sh
#COPY ${TE_GITHUB_SRC_DIR}/thirdeye-dashboard/config/* ${TE_HOME}/config/default/
COPY ${TE_GITHUB_SRC_DIR}/thirdeye-dashboard/config/data-sources/* ${TE_HOME}/config/default/data-sources/
COPY ${TE_GITHUB_SRC_DIR}/thirdeye-dashboard/config/detector-config/* ${TE_HOME}/config/default/detector-config/
COPY ${TE_GITHUB_SRC_DIR}/thirdeye-dashboard/config/detector-config/anomaly-functions/* ${TE_HOME}/config/default/detector-config/anomaly-functions/
COPY ${TE_GITHUB_SRC_DIR}/thirdeye-dashboard/config/data/* ${TE_HOME}/config/default/data/
COPY ${TE_GITHUB_SRC_DIR}/thirdeye-frontend/config/environment.js ${FE_CONFIG_DIR}/
## Remove the h2db.mv.db
#RUN rm ${TE_HOME}/config/default/h2db.mv.db 
COPY ${TE_GITHUB_SRC_DIR}/thirdeye-dashboard/config/persistence.yml ${TE_HOME}/config/default/

EXPOSE 1426 1427
WORKDIR ${TE_HOME}

ENTRYPOINT ["./bin/entrypoint.sh"]

